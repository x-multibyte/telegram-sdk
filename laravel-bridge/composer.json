{
  "name": "xbot-my/telegram-sdk-laravel-bridge",
  "description": "Laravel bridge for the xbot-my/telegram-sdk, providing service provider, console commands, and controllers.",
  "type": "library",
  "require": {
    "php": "^8.3",
    "xbot-my/telegram-sdk": "^1.0",
    "illuminate/contracts": "^11.0||^12.0"
  },
  "autoload": {
    "psr-4": {
      "XBot\\Telegram\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "XBot\\Telegram\\Providers\\TelegramServiceProvider"
      ],
      "aliases": {
        "Telegram": "XBot\\Telegram\\Facades\\Telegram"
      }
    }
  }
}
